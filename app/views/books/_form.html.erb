<h1 class="text-3xl font-bold mb-6">New Product</h1>

<%= form_with model: @book, class: "space-y-4 bg-white p-6 shadow-lg rounded-lg" do |form| %>
  <div class="flex flex-col">
    <%= form.label :title, class: "text-gray-700 font-semibold" %>
    <%= form.text_field :title, class: "mt-1 p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
  </div>

  <div class="flex flex-col">
    <%= form.label :body, class: "text-gray-700 font-semibold" %>
    <%= form.text_field :body, class: "mt-1 p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
  </div>

  <div>
    <%= form.submit "Create Book", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition" %>
  </div>
<% end %>
